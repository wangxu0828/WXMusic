<wxs src="../../utils/format.wxs" module="format"></wxs>
<!-- component/video-item/index.wxml -->
<view class="item">
  <view class="album">
    <image class="image" src="{{item.cover}}" mode="widthFix"></image>
    <view class="info">
      <view class="count">{{format.formatPlayCount(item.playCount)}}</view>
      <view class="duration">{{format.formatTime(item.mv.videos[0].duration)}}</view>
    </view>
  </view>
  <view class="content">{{item.name}} - {{item.artistName}}</view>
</view>