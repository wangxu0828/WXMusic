/* component/ranking-area-item/index.wxss */
.ranking-area-item {
  border-radius: 10rpx;
  width: 100%;
  height: 240rpx;
  display: flex;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.ranking-area-item .left {
  width: 60%;
  background-color: #ccc;
  padding: 20rpx;
}



.ranking-area-item .left .content{
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
 
}


.ranking-area-item .left .name{
  font-size: 40rpx;
  font-weight: 600;
}

.ranking-area-item .right {
  width: 250rpx;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.ranking-area-item .right .image{
  width: 100%;
}

.ranking-area-item .right .play-count{
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
  background-color: #333;
  font-size: 30rpx;
  padding: 10rpx;
  border-radius: 15rpx;
  overflow: hidden;
}